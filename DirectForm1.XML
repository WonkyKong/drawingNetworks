<figure>
    <scaleBox>
        1.3
    </scaleBox>
    <picture_size>
        8,8
    </picture_size>
    <grid>
        <x>
            1,2,3,4,5,6,7
        </x>
        <y>
            7.6,6.8,6,5.2,4.4,2.6,1.8,1,  4, 3.1
        </y>
    </grid>
    <lines>
        <!-- __________ Horizontal lines __________ -->
        <line start="1,1" stop="7,1" />
        <line start="2,3" stop="6,3" />
        <line start="2,5" stop="6,5" />
        <line start="2,6" stop="6,6" />
        <line start="2,8" stop="6,8" />

        <!-- __________ Vertical lines __________ -->
        <line start="2,1" stop="2,9" />
        <line start="4,1" stop="4,9" />
        <line start="6,1" stop="6,9" />

        <line start="2,9" stop="2,10" line_style="linestyle=dashed,dash=3pt 4pt"/>
        <line start="4,9" stop="4,10" line_style="linestyle=dashed,dash=3pt 4pt"/>
        <line start="6,9" stop="6,10" line_style="linestyle=dashed,dash=3pt 4pt"/>

        <line start="2,10" stop="2,8" />
        <line start="4,10" stop="4,8" />
        <line start="6,10" stop="6,8" />
    </lines>
    <nodes>
        <!-- __________Multipliers__________ -->
        <node type="multiplier" position="3,1" direction="l" coefficient="b_0"/>
        <node type="multiplier" position="3,3" direction="l" coefficient="b_1"/>
        <node type="multiplier" position="3,5" direction="l" coefficient="b_2"/>
        <node type="multiplier" position="3,6" direction="l" coefficient="b_{K-1}"/>
        <node type="multiplier" position="3,8" direction="l" coefficient="b_K"/>

        <node type="multiplier" position="5,3" direction="r" coefficient="-a_1"/>
        <node type="multiplier" position="5,5" direction="r" coefficient="-a_2"/>
        <node type="multiplier" position="5,6" direction="r" coefficient="-a_{K-1}"/>
        <node type="multiplier" position="5,8" direction="r" coefficient="-a_K"/>

        <!-- __________Adders__________ -->
        <node type="adder" position="4,1" arrows="lb"/>
        <node type="adder" position="4,3" arrows="lrb"/>
        <node type="adder" position="4,5" arrows="lrb"/>
        <node type="adder" position="4,6" arrows="lrb"/>
        <node type="adder" position="4,8" arrows="lr"/>

        <!-- __________Delays__________ -->
        <node type="delay" position="2,2" arrows="t"/>
        <node type="delay" position="2,4" arrows="t"/>
        <node type="delay" position="2,7" arrows="t"/>

        <node type="delay" position="6,2" arrows="t"/>
        <node type="delay" position="6,4" arrows="t"/>
        <node type="delay" position="6,7" arrows="t"/>

        <!-- __________ Arrows __________ -->
        <node type="arrow" position="7,1"  arrows="l" text="y[n]"/>
        <node type="arrow" position="1,1"  arrows=""  text="x[n]"/>
        <node type="arrow" position="2,9"  arrows="t" text=""/>
        <node type="arrow" position="6,9"  arrows="t" text=""/>
        <node type="arrow" position="4,10" arrows="b" text=""/>
    </nodes>
</figure>
